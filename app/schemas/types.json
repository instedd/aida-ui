{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "bot": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "published": { "type": "boolean" },
        "channel_setup": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": [ "id", "name", "published", "channel_setup" ]
    },

    "facebookChannelConfig": {
      "type": "object",
      "properties": {
        "page_id": { "type": "string" },
        "verify_token": { "type": "string" },
        "access_token": { "type": "string" }
      },
      "additionalProperties": false,
      "required": [ "page_id", "verify_token", "access_token" ]
    },

    "frontDeskConfig": {
      "type": "object",
      "properties": {
        "greeting": { "$ref": "#/definitions/message" },
        "introduction": { "$ref": "#/definitions/message" },
        "not_understood": { "$ref": "#/definitions/message" },
        "clarification": { "$ref": "#/definitions/message" },
        "threshold": { "type": "number", "maximum": 0.5, "minimum": 0 }
      },
      "additionalProperties": false,
      "required": [ "greeting", "introduction", "not_understood", "clarification", "threshold" ]
    },

    "languageDetectorConfig": {
      "type": "object",
      "properties": {
        "explanation": { "type": "string" },
        "languages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "code": { "$ref": "#/definitions/language" },
              "keywords": { "$ref": "#/definitions/keywordList" }
            },
            "required": [ "code", "keywords" ]
          }
        }
      },
      "additionalProperties": false,
      "required": [ "explanation", "languages" ]
    },

    "keywordResponderConfig": {
      "type": "object",
      "properties": {
        "relevant": { "type": "string" },
        "explanation": { "$ref": "#/definitions/message" },
        "clarification": { "$ref": "#/definitions/message" },
        "keywords": { "$ref": "#/definitions/keywordList" },
        "response": { "$ref": "#/definitions/message" }
      },
      "additionalProperties": false,
      "required": [ "explanation", "clarification", "keywords", "response" ]
    },

    "surveyConfig": {
      "type": "object",
      "properties": {
        "relevant": { "type": "string" },
        "schedule": { "type": "string" },
        "questions": {
          "type": "array",
          "items": { "$ref": "#/definitions/surveyQuestion" }
        },
        "choice_lists": {
          "type": "array",
          "items": { "$ref": "#/definitions/surveyChoiceList" }
        }
      },
      "additionalProperties": false,
      "required": []
    },

    "scheduledMessagesConfig": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "relevant": { "type": "string" },
            "schedule_type": { "type": "string", "enum": ["since_last_incoming_message"] },
            "messages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "delay": { "type": "number" },
                  "message": { "$ref": "#/definitions/message" }
                },
                "additionalProperties": false,
                "required": [ "id", "delay", "message" ]
              }
            }
          },
          "additionalProperties": false,
          "required": [ "schedule_type", "messages" ]
        },
        {
          "type": "object",
          "properties": {
            "relevant": { "type": "string" },
            "schedule_type": { "type": "string", "enum": ["fixed_time"] },
            "messages": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "schedule": { "type": ["string"] },
                  "message": { "$ref": "#/definitions/message" }
                },
                "additionalProperties": false,
                "required": [ "id", "schedule", "message" ]
              }
            }
          },
          "additionalProperties": false,
          "required": [ "schedule_type", "messages" ]
        }
      ]
    },

    "message": {
      "type": "string"
    },

    "keywordList": {
      "type": "string"
    },

    "language": {
      "type": "string"
    },

    "surveyQuestion": {
      "oneOf": [
        {
          "type": "object",
          "required": [ "type", "name", "choices", "message" ],
          "properties": {
            "type": { "enum": [ "select_one", "select_many" ]},
            "name": { "type": "string" },
            "choices": { "type": "string" },
            "message": { "$ref": "#/definitions/message" },
            "relevant": { "type": "string" }
          }
        },
        {
          "type": "object",
          "required": [ "type", "name", "message" ],
          "properties": {
            "type": { "enum": [ "integer", "decimal", "text" ]},
            "name": { "type": "string" },
            "message": { "$ref": "#/definitions/message" },
            "relevant": { "type": "string" }
          }
        }
      ]
    },

    "surveyChoiceList": {
      "type": "object",
      "required": [ "name", "choices" ],
      "properties": {
        "name": { "type": "string" },
        "choices": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [ "name", "labels" ],
            "properties": {
              "name": { "type": "string" },
              "labels": { "$ref": "#/definitions/keywordList" }
            }
          }
        }
      }
    },

    "channel" : {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "name": { "type": "string" },
            "kind": { "type": "string", "enum": ["facebook"] },
            "config": { "$ref": "#/definitions/facebookChannelConfig" }
          },
          "additionalProperties": false,
          "required": [ "id", "name", "kind", "config" ]
        }
      ]
    },

    "frontDesk": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "config": { "$ref": "#/definitions/frontDeskConfig" }
      },
      "required": [ "id", "config" ]
    },

    "skill": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "language_detector" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/languageDetectorConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        },
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "keyword_responder" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/keywordResponderConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        },
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "survey" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/surveyConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        },
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "scheduled_messages" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/scheduledMessagesConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        }
      ]
    },

    "bot_stats": {
      "type": "object",
      "properties": {
        "active_users": { "type": "integer" },
        "messages_received": { "type": "integer" },
        "messages_sent": { "type": "integer" },
        "behaviours": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "oneOf": [
                  { "enum": [ "front_desk", "language_detector" ] },
                  { "type": "integer" }
                ]
              },
              "label": { "type": "string" },
              "kind": { "enum": [
                "keyword_responder",
                "survey",
                "scheduled_messages",
                "front_desk",
                "language_detector"
              ] },
              "users": { "type": "integer" }
            },
            "required": [ "id", "label", "kind", "users" ]
          }
        }
      },
      "required": [ "active_users", "messages_received", "messages_sent", "behaviours" ]
    },

    "stats_period": {
      "enum": [ "today", "this_week", "this_month" ]
    },

    "translation_behaviours": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "label": { "type": "string" },
          "keys": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "_key": { "type": "string" },
                "_label": { "type": "string" }
              },
              "required": [ "_key", "_label" ]
            }
          }
        },
        "required": [ "id", "label", "keys" ]
      }
    },

    "string_by_language": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "type": "string" }
    },

    "variable_assignments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "default_value": { "$ref": "#/definitions/string_by_language" },
          "conditional_values": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "condition": { "type": "string" },
                "value": { "$ref": "#/definitions/string_by_language" },
                "order": { "type": "integer" }
              },
              "additionalProperties": false,
              "required" : [ "id", "condition", "value", "order" ]
            }
          }
        },
        "additionalProperties": false,
        "required": [ "id", "name", "default_value", "conditional_values" ]
      }
    },

    "translations_index": {
      "type": "object",
      "properties": {
        "languages": {
          "type": "array",
          "items": { "$ref": "#/definitions/language" },
          "minItems": 1
        },
        "default_language": { "$ref": "#/definitions/language" },
        "behaviours": { "$ref": "#/definitions/translation_behaviours" },
        "variables": { "$ref": "#/definitions/variable_assignments" }
      },
      "required": [ "languages", "default_language", "behaviours", "variables" ]
    },

    "translation": {
      "type": "object",
      "properties": {
        "behaviour_id": { "type": "integer" },
        "key": { "type": "string" },
        "lang": { "$ref": "#/definitions/language" },
        "value": { "type": "string" }
      },
      "required": [ "behaviour_id", "key", "lang", "value" ]
    },

    "collaborator": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "role": { "type": "string" },
        "user_email": { "type": "string" },
        "last_activity": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        }
      },
      "required": [ "id", "role", "user_email", "last_activity" ]
    },

    "collaborators_index": {
      "type": "object",
      "properties": {
        "collaborators": {
          "type": "array",
          "items": { "$ref": "#/definitions/collaborator" }
        },
        "invitations": {
          "type": "array",
          "items": { "$ref": "#/definitions/invitation" }
        },
        "anonymous_invitation": { "$ref": "#/definitions/invitation" }
      },
      "required": [ "collaborators", "invitations", "anonymous_invitation" ]
    },

    "invitation": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "creator": { "type": "string" },
        "email": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        },
        "role": { "type": "string" },
        "link_url": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        },
        "created_at": { "type": "string" }
      },
      "required": [ "id", "email", "link_url", "created_at" ]
    },

    "invitation_data": {
      "type": "object",
      "properties": {
        "bot_name": { "type": "string" },
        "inviter": { "type": "string" },
        "role": { "type": "string" }
      },
      "required": [ "bot_name", "inviter", "role" ]
    }
  },

  "type": "object",
  "properties": {
    "bot": { "$ref": "#/definitions/bot" }
  }
}
