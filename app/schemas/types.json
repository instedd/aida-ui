{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "bot": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "published": { "type": "boolean" },
        "channel_setup": { "type": "boolean" },
        "permissions": { "$ref": "#/definitions/permissions" },
        "collaborator_id": {
          "oneOf": [
            { "type": "integer" },
            { "type": "null" }
          ]
        }
      },
      "additionalProperties": false,
      "required": [ "id", "name", "published", "channel_setup", "permissions" ]
    },

    "permissions": {
      "type": "object",
      "properties": {
        "can_admin": { "type": "boolean" },
        "can_publish": { "type": "boolean" },
        "manages_behaviour": { "type": "boolean" },
        "manages_content": { "type": "boolean" },
        "manages_variables": { "type": "boolean" },
        "manages_results": { "type": "boolean" }
      }
    },

    "facebookChannelConfig": {
      "type": "object",
      "properties": {
        "page_id": { "type": "string" },
        "verify_token": { "type": "string" },
        "access_token": { "type": "string" }
      },
      "additionalProperties": false,
      "required": [ "page_id", "verify_token", "access_token" ]
    },

    "frontDeskConfig": {
      "type": "object",
      "properties": {
        "greeting": { "$ref": "#/definitions/message" },
        "introduction": { "$ref": "#/definitions/message" },
        "not_understood": { "$ref": "#/definitions/message" },
        "clarification": { "$ref": "#/definitions/message" },
        "threshold": { "type": "number", "maximum": 0.5, "minimum": 0 }
      },
      "additionalProperties": false,
      "required": [ "greeting", "introduction", "not_understood", "clarification", "threshold" ]
    },

    "languageDetectorConfig": {
      "type": "object",
      "properties": {
        "explanation": { "type": "string" },
        "languages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "code": { "$ref": "#/definitions/language" },
              "keywords": { "$ref": "#/definitions/keywordList" }
            },
            "required": [ "code", "keywords" ]
          }
        },
        "reply_to_unsupported_language": { "type": "boolean" }
      },
      "additionalProperties": false,
      "required": [ "explanation", "languages" ]
    },

    "keywordResponderConfig": {
      "type": "object",
      "properties": {
        "relevant": { "type": "string" },
        "explanation": { "$ref": "#/definitions/message" },
        "clarification": { "$ref": "#/definitions/message" },
        "keywords": { "$ref": "#/definitions/keywordList" },
        "response": { "$ref": "#/definitions/message" }
      },
      "additionalProperties": false,
      "required": [ "explanation", "clarification", "keywords", "response" ]
    },

    "surveyConfig": {
      "type": "object",
      "properties": {
        "relevant": { "type": "string" },
        "schedule": { "type": "string" },
        "keywords": { "$ref": "#/definitions/keywordList" },
        "questions": {
          "type": "array",
          "items": { "$ref": "#/definitions/surveyQuestion" }
        },
        "choice_lists": {
          "type": "array",
          "items": { "$ref": "#/definitions/surveyChoiceList" }
        }
      },
      "additionalProperties": false,
      "required": []
    },

    "scheduledMessagesConfig": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "relevant": { "type": "string" },
            "schedule_type": { "type": "string", "enum": ["since_last_incoming_message"] },
            "messages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "delay": { "type": "number" },
                  "delay_unit": { "enum": ["minute", "hour", "day", "week", "month"] },
                  "message": { "$ref": "#/definitions/message" }
                },
                "additionalProperties": false,
                "required": [ "id", "delay", "delay_unit", "message" ]
              }
            }
          },
          "additionalProperties": false,
          "required": [ "schedule_type", "messages" ]
        },
        {
          "type": "object",
          "properties": {
            "relevant": { "type": "string" },
            "schedule_type": { "type": "string", "enum": ["fixed_time"] },
            "messages": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "schedule": { "type": ["string"] },
                  "message": { "$ref": "#/definitions/message" }
                },
                "additionalProperties": false,
                "required": [ "id", "schedule", "message" ]
              }
            }
          },
          "additionalProperties": false,
          "required": [ "schedule_type", "messages" ]
        },
        {
          "type": "object",
          "properties": {
            "relevant": { "type": "string" },
            "schedule_type": { "type": "string", "enum": ["recurrent"] },
            "start_date": { "type": "string" },
            "messages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "recurrence": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "type": { "enum": ["daily"] },
                          "every": { "type": "integer" },
                          "at": { "type": "string" }
                        },
                        "required": [ "type", "every", "at" ]
                      },
                      {
                        "type": "object",
                        "properties": {
                          "type": { "enum": ["weekly"] },
                          "every": { "type": "integer" },
                          "on": {
                            "type": "array",
                            "minItems": 1,
                            "maxItems": 1,
                            "items": {
                              "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]
                            }
                          },
                          "at": { "type": "string" }
                        },
                        "required": [ "type", "every", "on", "at" ]
                      },
                      {
                        "type": "object",
                        "properties": {
                          "type": { "enum": ["monthly"] },
                          "every": { "type": "integer" },
                          "each": { "type": "integer" },
                          "at": { "type": "string", "pattern": "^[0-9]{1,2}:[0-9]{2}$" }
                        },
                        "required": [ "type", "every", "each", "at" ]
                      }
                    ]
                  },
                  "message": { "$ref": "#/definitions/message" }
                },
                "additionalProperties": false,
                "required": [ "id", "recurrence", "message" ]
              }
            }
          },
          "additionalProperties": false,
          "required": [ "schedule_type", "start_date", "messages" ]
        }
      ]
    },

    "tree_node": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "message": { "$ref": "#/definitions/message" },
        "options": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "$ref": "#/definitions/keywordList" },
              "next": { "type": "string" }
            },
            "additionalProperties": false,
            "required": [ "label", "next" ]
          }
        }
      },
      "additionalProperties": false,
      "required": [ "id", "message", "options" ]
    },

    "tree_nodes_dict": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "$ref": "#/definitions/tree_node" }
    },

    "decisionTreeConfig": {
      "type": "object",
      "properties": {
        "relevant": { "type": "string" },
        "explanation": { "$ref": "#/definitions/message" },
        "clarification": { "$ref": "#/definitions/message" },
        "keywords": { "$ref": "#/definitions/keywordList" },
        "tree": {
          "type": "object",
          "properties": {
            "initial": { "type": "string" },
            "nodes": { "$ref": "#/definitions/tree_nodes_dict" }
          },
          "additionalProperties": false,
          "required": [ "initial", "nodes" ]
        }
      },
      "additionalProperties": false,
      "required": [ "explanation", "clarification", "keywords", "tree"]
    },

    "message": {
      "type": "string"
    },

    "keywordList": {
      "type": "string"
    },

    "language": {
      "type": "string"
    },

    "surveyQuestion": {
      "oneOf": [
        {
          "type": "object",
          "required": [ "type", "name", "choices", "message" ],
          "properties": {
            "type": { "enum": [ "select_one", "select_many" ]},
            "name": { "type": "string" },
            "choices": { "type": "string" },
            "message": { "$ref": "#/definitions/message" },
            "relevant": { "type": "string" },
            "constraint_message": { "$ref": "#/definitions/message" },
            "encrypt": { "type": "boolean" }
          }
        },
        {
          "type": "object",
          "required": [ "type", "name", "message" ],
          "properties": {
            "type": { "enum": [ "integer", "decimal", "text", "image", "note" ]},
            "name": { "type": "string" },
            "message": { "$ref": "#/definitions/message" },
            "relevant": { "type": "string" },
            "constraint": { "type": "string" },
            "constraint_message": { "$ref": "#/definitions/message" },
            "encrypt": { "type": "boolean" }
          }
        }
      ]
    },

    "attributes_dict": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "type": ["string", "integer"] }
    },

    "surveyChoiceList": {
      "type": "object",
      "required": [ "name", "choices" ],
      "properties": {
        "name": { "type": "string" },
        "choices": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [ "name", "labels" ],
            "properties": {
              "name": { "type": "string" },
              "labels": { "$ref": "#/definitions/keywordList" },
              "attributes": {"$ref": "#/definitions/attributes_dict"}
            },
            "additionalProperties": false,
            "required": [ "name", "labels" ]
          }
        }
      }
    },

    "channel" : {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "name": { "type": "string" },
            "kind": { "type": "string", "enum": ["facebook"] },
            "config": { "$ref": "#/definitions/facebookChannelConfig" }
          },
          "additionalProperties": false,
          "required": [ "id", "name", "kind", "config" ]
        }
      ]
    },

    "frontDesk": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "config": { "$ref": "#/definitions/frontDeskConfig" }
      },
      "required": [ "id", "config" ]
    },

    "skill": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "language_detector" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/languageDetectorConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        },
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "keyword_responder" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/keywordResponderConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        },
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "survey" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/surveyConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        },
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "scheduled_messages" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/scheduledMessagesConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        },
        {
          "type": "object",
          "properties": {
            "id": { "type": "integer" },
            "kind": { "enum": [ "decision_tree" ] },
            "name": { "type": "string" },
            "enabled": { "type": "boolean" },
            "order": { "type": "integer" },
            "config": { "$ref": "#/definitions/decisionTreeConfig" }
          },
          "required": [ "id", "kind", "name", "enabled", "order", "config" ]
        }
      ]
    },

    "bot_stats": {
      "type": "object",
      "properties": {
        "active_users": { "type": "integer" },
        "messages_received": { "type": "integer" },
        "messages_sent": { "type": "integer" },
        "behaviours": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "oneOf": [
                  { "enum": [ "front_desk", "language_detector" ] },
                  { "type": "integer" }
                ]
              },
              "label": { "type": "string" },
              "kind": { "enum": [
                "keyword_responder",
                "survey",
                "scheduled_messages",
                "front_desk",
                "language_detector"
              ] },
              "users": { "type": "integer" }
            },
            "required": [ "id", "label", "kind", "users" ]
          }
        }
      },
      "required": [ "active_users", "messages_received", "messages_sent", "behaviours" ]
    },

    "stats_period": {
      "enum": [ "today", "this_week", "this_month" ]
    },

    "bot_error_logs": {
      "type": "array",
      "items": { "$ref": "#/definitions/bot_error_log" }
    },

    "bot_error_log": {
      "type": "object",
      "properties": {
        "timestamp": { "type": "string" },
        "bot_id": { "type": "string" },
        "session_id": { "type": "string" },
        "skill_id": { "type": "string" },
        "message": { "type": "string" }
      },
      "required": [ "timestamp", "bot_id", "session_id", "skill_id", "message" ]
    },

    "translation_behaviours": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "label": { "type": "string" },
          "keys": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "_key": { "type": "string" },
                "_label": { "type": "string" }
              },
              "required": [ "_key", "_label" ]
            }
          }
        },
        "required": [ "id", "label", "keys" ]
      }
    },

    "string_by_language": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "type": "string" }
    },

    "variable_assignments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "default_value": { "$ref": "#/definitions/string_by_language" },
          "conditional_values": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "condition": { "type": "string" },
                "value": { "$ref": "#/definitions/string_by_language" },
                "order": { "type": "integer" }
              },
              "additionalProperties": false,
              "required" : [ "id", "condition", "value", "order" ]
            }
          }
        },
        "additionalProperties": false,
        "required": [ "id", "name", "default_value" ]
      }
    },

    "translations_index": {
      "type": "object",
      "properties": {
        "languages": {
          "type": "array",
          "items": { "$ref": "#/definitions/language" },
          "minItems": 1
        },
        "default_language": { "$ref": "#/definitions/language" },
        "behaviours": { "$ref": "#/definitions/translation_behaviours" },
        "variables": { "$ref": "#/definitions/variable_assignments" }
      },
      "required": [ "languages", "default_language", "behaviours", "variables" ]
    },

    "translation": {
      "type": "object",
      "properties": {
        "behaviour_id": { "type": "integer" },
        "key": { "type": "string" },
        "lang": { "$ref": "#/definitions/language" },
        "value": { "type": "string" }
      },
      "required": [ "behaviour_id", "key", "lang", "value" ]
    },

    "update_variable": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "variable_name": { "type": "string" },
        "lang": { "$ref": "#/definitions/language" },
        "value": { "type": "string" },
        "condition_id": { "type": "string" },
        "condition": { "type": "string" },
        "condition_order": { "type": "number" }
      },
      "required": [
        "id",
        "name",
        "lang",
        "value"
      ]
    },

    "collaborator": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "roles": { "$ref": "#/definitions/role_list" },
        "user_email": { "type": "string" },
        "last_activity": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        }
      },
      "required": [ "id", "roles", "user_email", "last_activity" ]
    },

    "collaborators_index": {
      "type": "object",
      "properties": {
        "collaborators": {
          "type": "array",
          "items": { "$ref": "#/definitions/collaborator" }
        },
        "invitations": {
          "type": "array",
          "items": { "$ref": "#/definitions/invitation" }
        },
        "anonymous_invitation": { "$ref": "#/definitions/invitation" }
      },
      "required": [ "collaborators", "invitations", "anonymous_invitation" ]
    },

    "invitation": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "creator": { "type": "string" },
        "email": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        },
        "roles": { "$ref": "#/definitions/role_list" },
        "link_url": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ]
        },
        "sent_at": { "type": "string" }
      },
      "required": [ "id", "email", "link_url", "sent_at" ]
    },

    "role": {
      "enum": [ "publish", "behaviour", "content", "variables", "results" ]
    },

    "role_list": {
      "type": "array",
      "items": { "$ref": "#/definitions/role" }
    },

    "invitation_data": {
      "type": "object",
      "properties": {
        "bot_name": { "type": "string" },
        "inviter": { "type": "string" },
        "roles": { "$ref": "#/definitions/role_list" }
      },
      "required": [ "bot_name", "inviter", "roles" ]
    },

    "data_table_data": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "any"
        }
      }
    },

    "data_table": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "columns": { "type": "array", "items": { "type": "string" }},
        "updated_at": { "type": "string" },
        "data": {
          "oneOf": [
            { "type": "null" },
            { "$ref": "#/definitions/data_table_data" }
          ]
        }
      },
      "required": [ "id", "name", "columns", "updated_at", "data" ]
    },

    "encrypted_key_pair": {
      "type": "object",
      "properties": {
        "public_key": { "type": "string" },
        "encrypted_secret_key": { "type": "string" }
      },
      "required": [ "public_key", "encrypted_secret_key" ]
    }
  },

  "type": "object",
  "properties": {
    "bot": { "$ref": "#/definitions/bot" }
  }
}
